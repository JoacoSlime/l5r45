<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
  <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
  <h1><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
  </header>
  <div class="sheet-content">
    <table>
      <tr>
        <th>{{localize "l5r45.skill.type"}}</th>
        <th>{{localize "l5r45.special.cost"}}</th>
      </tr>
      <tr>
        <td>
        <select name="system.type">
          <option selected disabled>{{localize "l5r45.skill.type"}}</option>
          {{#select item.system.type}}
          {{#each config.advantageTypes as |name type|}}
          <option value="{{type}}">{{localize name}}</option>
          {{/each}}
          {{/select}}
        </select>
        </td>
        <td>
          <input name="system.cost" type="number" value="{{item.system.cost}}" data-type="Number" />
        </td>
      </tr>
    </table>
    <h2>{{localize "l5r45.sheet.rulesSummary"}}</h2>
    {{editor item.system.enrichedSpecialRules target="system.specialRules" button=true editable=editable engine="prosemirror" collaborate=false}}
    <h2>{{localize "l5r45.sheet.description"}}</h2>
    {{editor item.system.enrichedDescription target="system.description" button=true editable=editable engine="prosemirror" collaborate=false}}
  </div>
</form>
