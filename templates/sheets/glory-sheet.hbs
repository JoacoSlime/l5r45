<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64" />
    <h1><input name="name" type="text" value="{{item.name}}" placeholder="Name" /></h1>
  </header>
  <div class="sheet-content">
    <table>
      <tr>
        <th>{{localize "l5r45.ranks.honor.table.val"}}:</th>
        <td colspan="2"><input class="glory-name inline-edit" type="number" value="{{item.system.value}}"
        data-field="system.value" placeholder="{{localize "l5r45.ranks.honor.table.val"}}" data-type="Number" />
      </tr>
    </table>
    <h2>{{localize "l5r45.sheet.description"}}</h2>
    {{editor item.system.description target="system.description" button=true  editable=editable}}
  </div>
</form>