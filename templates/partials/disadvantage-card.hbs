<div class="item-border {{type}}">
  <div class="disadvantage-card item" data-item-id="{{_id}}">
    <div class="disadvantage-info disadvantage-name">
      <h3>
        {{#if inSheet}}
          <img width="15px" height="15px" src="{{img}}" />
          <a title="{{localize "l5r45.sheet.edit"}}" class="item-edit">{{name}}</a>
        {{else}}
          {{name}}
        {{/if}}
      </h3>
    </div>
    <div class="disadvantage-info disadvantage-stats">
      <div class="advantage-type">
        {{localize "l5r45.skill.type"}}: {{localize (concat "l5r45.advantage." system.type)}}
      </div>
      <div class="disadvantage-cost">
        {{localize "l5r45.special.cost"}}: {{system.cost}}
      </div>
    </div>
      <div class="disadvantage-effects">
        {{{system.enrichedSpecialRules}}}
      </div>
    {{#if inSheet}}
      <div>
        <a class="item-edit"  title="{{localize "l5r45.sheet.edit"}}"><i class="fas fa-edit fa-fw"></i></a>
      </div>
    {{/if}}
  </div>
</div>